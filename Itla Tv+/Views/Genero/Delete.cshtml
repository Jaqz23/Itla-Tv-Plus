@model Application.ViewModels.Genero.SaveGeneroViewModel

@{
    ViewData["Title"] = "Eliminar género";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>¿Está seguro que desea eliminar el género "@Model.Name"?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Genero" asp-action="DeletePost">                 
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Genero" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
