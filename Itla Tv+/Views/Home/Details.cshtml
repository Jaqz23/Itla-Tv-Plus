@using Application.ViewModels.Series;
@model SeriesViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-dark">@Model.Name</h2>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12 text-center">
            <iframe width="95%" height="680"
                    src="https://www.youtube.com/embed/@Model.VideoLink"
                    frameborder="0"
                    allowfullscreen>
            </iframe>
        </div>
    </div>

    </div>
    <div class="row mt-4">
        <p class="text-muted" style="text-align: justify;">@Model.Description</p>
        <div class="col-12 text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Volver al Home</a>
        </div>
    </div>
</div>
