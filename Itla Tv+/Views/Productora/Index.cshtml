@using Application.ViewModels.Productora
@model List<ProductoraViewModel>

@{
    ViewData["Title"] = "Mantenimiento de Productoras";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success">
                    <h3 class="text-white text-center ">Mantenimiento de Productoras</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-3 offset-9 text-end">
                            <a class="btn btn-outline-success" asp-controller="Productora" asp-action="Create">
                                Crear nueva productora
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        @if (!Model.Any())
                        {
                            <div class="col-12 text-center">
                                <h4 class="text-muted">No hay productoras registradas</h4>
                            </div>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <div class="col-4 mb-3">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title text-dark">@item.Name</h5>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a asp-controller="Productora" asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-info">Editar</a>
                                                    <a asp-controller="Productora" asp-action="Delete" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-danger">Eliminar</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
